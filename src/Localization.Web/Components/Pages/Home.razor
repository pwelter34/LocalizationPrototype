@page "/"

<PageTitle>@SiteName</PageTitle>

<div class="container-xxl">
    <div class="bg-light p-5 rounded shadow mb-5">
        <h1>
            <img src="@SiteLogo"
                 class="me-2"
                 height="60" />

            @SiteName
        </h1>
        <p class="lead">
            <LocalizedText Key="@Localizations.Home.Subtitle">
                Manage your global content with confidence
            </LocalizedText>
        </p>
    </div>

    <section class="mb-5">
        <div class="row text-center mb-4">
            <div class="col">
                <h2 class="display-6 mb-3">
                    <LocalizedText Key="@Localizations.Home.SectionTitle">
                        Why Choose Our Localization Portal?
                    </LocalizedText>
                </h2>
                <p class="lead text-muted">
                    <LocalizedText Key="@Localizations.Home.SectionSubtitle">
                        Built for teams that need powerful, flexible translation management
                    </LocalizedText>
                </p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary bg-gradient text-white rounded-circle mb-3 mx-auto d-flex align-items-center justify-content-center"
                             style="width: 60px; height: 60px;">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 width="28"
                                 height="28"
                                 fill="currentColor"
                                 class="bi bi-globe"
                                 viewBox="0 0 16 16">
                                <path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m7.5-6.923c-.67.204-1.335.82-1.887 1.855A8 8 0 0 0 5.145 4H7.5zM4.09 4a9.3 9.3 0 0 1 .64-1.539 7 7 0 0 1 .597-.933A7.03 7.03 0 0 0 2.255 4zm-.582 3.5c.03-.877.138-1.718.312-2.5H1.674a7 7 0 0 0-.656 2.5zM4.847 5a12.5 12.5 0 0 0-.338 2.5H7.5V5zM8.5 5v2.5h3.99a12.5 12.5 0 0 0-.337-2.5zM4.51 8.5a12.5 12.5 0 0 0 .337 2.5H7.5V8.5zm3.99 0V11h2.653c.187-.765.306-1.608.338-2.5zM5.145 12q.208.58.468 1.068c.552 1.035 1.218 1.65 1.887 1.855V12zm.182 2.472a7 7 0 0 1-.597-.933A9.3 9.3 0 0 1 4.09 12H2.255a7 7 0 0 0 3.072 2.472M3.82 11a13.7 13.7 0 0 1-.312-2.5h-2.49c.062.89.291 1.733.656 2.5zm6.853 3.472A7 7 0 0 0 13.745 12H11.91a9.3 9.3 0 0 1-.64 1.539 7 7 0 0 1-.597.933M8.5 12v2.923c.67-.204 1.335-.82 1.887-1.855q.26-.487.468-1.068zm3.68-1h2.146c.365-.767.594-1.61.656-2.5h-2.49a13.7 13.7 0 0 1-.312 2.5m2.802-3.5a7 7 0 0 0-.656-2.5H12.18c.174.782.282 1.623.312 2.5zM11.27 2.461c.247.464.462.98.64 1.539h1.835a7 7 0 0 0-3.072-2.472c.218.284.418.598.597.933M10.855 4a8 8 0 0 0-.468-1.068C9.835 1.897 9.17 1.282 8.5 1.077V4z" />
                            </svg>
                        </div>
                        <h3 class="h5 mb-3">
                            <LocalizedText Key="@Localizations.Home.LanguageTitle">
                                Multi-Language Support
                            </LocalizedText>
                        </h3>
                        <p class="text-muted">
                            <LocalizedText Key="@Localizations.Home.LanguageDescription">
                                Support unlimited languages and cultures. Easily add new markets and expand your global
                                reach without technical complexity.
                            </LocalizedText>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-success bg-gradient text-white rounded-circle mb-3 mx-auto d-flex align-items-center justify-content-center"
                             style="width: 60px; height: 60px;">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 width="28"
                                 height="28"
                                 fill="currentColor"
                                 class="bi bi-layout-text-window-reverse"
                                 viewBox="0 0 16 16">
                                <path d="M13 6.5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h5a.5.5 0 0 0 .5-.5m0 3a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h5a.5.5 0 0 0 .5-.5m-.5 2.5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1 0-1z" />
                                <path d="M14 0a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V2a2 2 0 0 1 2-2zM2 1a1 1 0 0 0-1 1v1h14V2a1 1 0 0 0-1-1zM1 4v10a1 1 0 0 0 1 1h2V4zm4 0v11h9a1 1 0 0 0 1-1V4z" />
                            </svg>
                        </div>
                        <h3 class="h5 mb-3">
                            <LocalizedText Key="@Localizations.Home.ThemeTitle">
                                Theme Organization
                            </LocalizedText>
                        </h3>
                        <p class="text-muted">
                            <LocalizedText Key="@Localizations.Home.ThemeDescription">
                                Organize content by themes and categories. Keep your translations structured and
                                maintain consistency across your applications.
                            </LocalizedText>
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-info bg-gradient text-white rounded-circle mb-3 mx-auto d-flex align-items-center justify-content-center"
                             style="width: 60px; height: 60px;">
                            <svg xmlns="http://www.w3.org/2000/svg"
                                 width="28"
                                 height="28"
                                 fill="currentColor"
                                 class="bi bi-lightning-charge"
                                 viewBox="0 0 16 16">
                                <path d="M11.251.068a.5.5 0 0 1 .227.58L9.677 6.5H13a.5.5 0 0 1 .364.843l-8 8.5a.5.5 0 0 1-.842-.49L6.323 9.5H3a.5.5 0 0 1-.364-.843l8-8.5a.5.5 0 0 1 .615-.09zM4.157 8.5H7a.5.5 0 0 1 .478.647L6.11 13.59l5.732-6.09H9a.5.5 0 0 1-.478-.647L9.89 2.41z" />
                            </svg>
                        </div>
                        <h3 class="h5 mb-3">
                            <LocalizedText Key="@Localizations.Home.RealTimeTitle">
                                Real-Time Updates
                            </LocalizedText>
                        </h3>
                        <p class="text-muted">
                            <LocalizedText Key="@Localizations.Home.RealTimeDescription">
                                Changes go live instantly. Update translations on the fly and see results immediately
                                without redeploying your applications.
                            </LocalizedText>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@code {
    [CascadingParameter]
    public ThemeState<Theme>? Theme { get; set; }

    protected string SiteLogo => Theme?.Current?.SiteLogo ?? "/logo/ReadyCredit.png";
    protected string SiteName => Theme?.Current?.SiteName ?? "Ready Credit";
}
